@model IEnumerable<B05ASPC02_w01.Models.Student>
@{
    ViewBag.Title = "Index";
}
@Html.ActionLink("Add", "Create","Students")
<h2>All Student</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Description</td>
            <td>...</td>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @Html.ActionLink("Edit data", "Edit", "Students", new { item.Id }, new { })
                    ||
                    @Html.ActionLink("ডিলিট করো", "Delete", "Students", new { item.Id }, new { })
                </td>
            </tr>
        }

    </tbody>
</table>

